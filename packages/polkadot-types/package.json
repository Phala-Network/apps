{
  "name": "@phala/polkadot-types",
  "version": "0.0.1",
  "scripts": {
    "updateMetadata": "ts-node --skip-project updateMetadata.ts",
    "generate": "npm run generate:defs && npm run generate:meta",
    "generate:defs": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-defs --package @phala/polkadot-types/interfaces  --endpoint metadata.json --input ./interfaces",
    "generate:meta": "ts-node --skip-project ../../node_modules/.bin/polkadot-types-from-chain --package @phala/polkadot-types/interfaces --endpoint metadata.json --output ./interfaces",
    "lint": "eslint --cache --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --cache --ext .ts,.tsx ."
  },
  "devDependencies": {
    "@phala/typedefs": "^0.2.32",
    "@polkadot/typegen": "^9.8.1",
    "@types/ws": "^8",
    "ts-node": "^10.9.1",
    "ws": "^8.11.0"
  },
  "dependencies": {
    "@polkadot/api": "^9.8.1"
  }
}
