{
  "name": "@phala/polkadot-types",
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "getMetadata": "bun getMetadata.ts",
    "generate": "bun run generate:defs && bun run generate:meta",
    "generate:defs": "node --experimental-specifier-resolution=node --loader ts-node/esm ../../node_modules/.bin/polkadot-types-from-defs --package @phala/polkadot-types/interfaces  --endpoint metadata.json --input ./interfaces",
    "generate:meta": "node --experimental-specifier-resolution=node --loader ts-node/esm ../../node_modules/.bin/polkadot-types-from-chain --package @phala/polkadot-types/interfaces --endpoint metadata.json --output ./interfaces",
    "lint": "eslint --cache --ext .ts,.tsx .",
    "lint:fix": "eslint --fix --cache --ext .ts,.tsx ."
  },
  "devDependencies": {
    "@polkadot/typegen": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "dependencies": {
    "@polkadot/api": "^10.9.1"
  }
}
