{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "files": {
    "ignore": [
      "packages/polkadot-types/interfaces",
      "subsquid*.ts",
      "metadata.json",
      "assets"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "bracketSpacing": false,
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  },
  "vcs": {
    "clientKind": "git",
    "defaultBranch": "main",
    "enabled": true,
    "useIgnoreFile": true
  },
  "overrides": [
    {
      "include": ["tsconfig.base.json"],
      "json": {
        "parser": {
          "allowComments": true
        }
      }
    }
  ]
}
